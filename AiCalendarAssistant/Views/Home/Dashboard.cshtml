
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid text-light mt-4">
    <h1 class="fw-bold mb-4">👋 Welcome back to your Dashboard</h1>

    <div class="row g-4">
        <!-- Calendar Link -->
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-lg">
                <div class="card-body">
                    <h4 class="card-title text-mint">Your Calendar</h4>
                    <p class="card-text">Manage your events, schedule meetings, and stay organized.</p>
                    <a href="/Calendar/Index" class="btn btn-outline-mint">Go to Calendar →</a>
                </div>
            </div>
        </div>

        <!-- Inbox Preview -->
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-lg">
                <div class="card-body">
                    <h4 class="card-title text-mint">Inbox Preview</h4>
                    <p class="card-text">Stay on top of recent messages and reminders.</p>
                    <a href="/Emails/Last" class="btn btn-outline-mint">Check Inbox →</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Emails -->
    
    </div>

    <!-- Optional: Quick Actions -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card bg-dark text-light border-0 shadow">
               
            </div>
        </div>
    </div>
</div>

<style>
    .text-mint {
        color: #5DB097;
    }

    .btn-mint {
        background-color: #5DB097;
        color: #000;
    }

        .btn-mint:hover {
            background-color: #4aa087;
            color: #fff;
        }

    .btn-outline-mint {
        border: 1px solid #5DB097;
        color: #5DB097;
    }

        .btn-outline-mint:hover {
            background-color: #5DB097;
            color: #000;
        }
</style>
