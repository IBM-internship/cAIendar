@model List<AiCalendarAssistant.Data.Models.Email>

@{
    ViewData["Title"] = "Last 10 Emails";
}
<div class="video-background">
    <video autoplay muted loop playsinline>
        <source src="/videos/bg-video-landing.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>
    <div class="video-overlay"></div>
</div>
<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>From</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var email in Model)
        {
            <tr>
                <td>@email.CreatedOn.ToString("g")</td>
                <td>@email.SendingUserEmail</td>
                <td>@email.Title</td>
                <td>@email.Body</td>
                <td>
                    <form asp-action="Reply" method="post" style="display: inline;">
                        <input type="hidden" name="messageId" value="@email.Id" />
                        <input type="hidden" name="threadId" value="@email.ThreadId" />
                        <input type="hidden" name="originalSubject" value="@email.Title" />
                        <input type="hidden" name="fromEmail" value="@email.SendingUserEmail" />
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="bi bi-reply"></i> Reply
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script>
    setTimeout(function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
</script>

<style>

    .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1;
    }

        .video-background video {
            min-width: 100%;
            min-height: 100%;
            object-fit: cover;
            filter: brightness(0.6) contrast(1.1);
            animation: zoomVideo 30s ease-in-out infinite alternate;
        }

    .video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom right, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.7));
    }

    @@keyframes zoomVideo {
        0% {
            transform: scale(1);
        }

        100% {
            transform: scale(1.1);
        }
    }
</style>