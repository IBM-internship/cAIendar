@model AiCalendarAssistant.Controllers.ChatViewModel
@{
    ViewData["Title"] = "Chat";
    var selectedChatId = (int?)ViewData["SelectedChatId"];
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>

    /* Chat container with transparent background, rounder and soft edges */
    .chat-container {
        flex-grow: 1;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        gap: 1rem;
        background-color: transparent !important;
        border: none !important;
        padding: 0.5rem 0.5rem;
        margin: 0;
    }

        /* Smooth scrollbar */
        .chat-container::-webkit-scrollbar {
            width: 6px;
            background: transparent;
        }

        .chat-container::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 6px;
        }

    /* Individual chat messages transparent with spacing */
    .chat-message {
        background-color: rgba(255, 255, 255, 0.1) !important;
        border-radius: 2rem !important;
        padding: 0.75rem 1.25rem !important;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        margin: 0; /* remove margin since gap on container used */
        max-width: 75%;
        word-wrap: break-word;
        color: white;
    }

        /* Different roles with subtle color variations */
        .chat-message.user {
            background-color: rgba(255, 255, 255, 0.15) !important;
            margin-right: auto;
            border-bottom-left-radius: 0;
        }

        .chat-message.assistant,
        .chat-message.tool,
        .chat-message.system {
            background-color: rgba(0, 123, 255, 0.15) !important;
            margin-left: auto;
            border-bottom-right-radius: 0;
        }

    /* Timestamp style */
    .timestamp {
        font-size: 0.75rem;
        color: #ccc;
        margin-top: 0.2rem;
        text-align: right;
    }

</style>

        <h5 class="card-title">Chat Messages</h5>

        @if (Model.SelectedChat != null && Model.SelectedChat.Messages != null)
        {
            <div class="chat-container" id="chatMessagesContainer">
                @foreach (var msg in Model.SelectedChat.Messages)
                {
                    string messageClass = msg.Role switch
                    {
                        AiCalendarAssistant.Data.Models.MessageRole.User => "chat-message user",
                        AiCalendarAssistant.Data.Models.MessageRole.Assistant => "chat-message assistant",
                        AiCalendarAssistant.Data.Models.MessageRole.Tool => "chat-message tool",
                        AiCalendarAssistant.Data.Models.MessageRole.System => "chat-message system",
                        _ => "chat-message"
                    };
                    <div class="@messageClass">
                        @msg.Text
                        <div class="timestamp">@msg.SentOn.ToShortTimeString()</div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No chat selected or no messages.</p>
        }


<script>
    function sendMessage(chatId) {
        const textbox = document.getElementById("messageInput");
        const text = document.getElementById("messageInput").value;
        if (!text.trim()) return;

        fetch("/api/chat", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({ text: text, chatId: chatId })
        })
        .then(response => response.text())
        .then(data => {
            textboxvalue = "";
            loadChatMessagesPartial(chatId);
        })
        .catch(error => {
            document.getElementById("responseText").textContent = "Error: " + error;
        });
    }

        function loadChatMessagesPartial(chatId) {
        fetch(`/Calendar/ChatMessagesPartial?chatId=${chatId}`)
            .then(response => response.text())
            .then(html => {
                document.getElementById("Chat").innerHTML = html;
                  setTimeout(() => {
                const container = document.getElementById("chatMessagesContainer");
                if (container) {
                    container.scrollTop = container.scrollHeight;
                }
            }, 50);
        });
            
    }

        document.addEventListener("DOMContentLoaded", function () {
        const container = document.getElementById("chatMessagesContainer");
        if (container) {
            container.scrollTop = container.scrollHeight;
        }
    });
</script>